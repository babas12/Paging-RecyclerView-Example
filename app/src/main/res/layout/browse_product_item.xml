<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/card_product"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="152dp"
        android:layout_height="318dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        android:focusable="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="180dp"
                          android:orientation="vertical">
            <ImageView
                    android:id="@+id/iv_all_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
/>
            </LinearLayout>

            <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_below="@id/iv_all_product"
                    android:id="@+id/tv_all_product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game of Throne"
                    android:layout_gravity="left"

            />

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by "
                        android:textColor="@android:color/darker_gray" android:layout_marginTop="0dp"
                        android:layout_alignParentTop="true"/>

                <TextView
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_toRightOf="@+id/tv_by"
                        android:id="@+id/tv_all_product_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" George R.R Martin"/>

                </LinearLayout>
            </LinearLayout>


            <TextView
                    android:id="@+id/tv_allproduct_sellprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Rp.53.700"
                    android:layout_gravity="left"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tv_allproduct_normalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="left"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>